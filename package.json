{
  "name": "@chiffre/template-website",
  "version": "0.0.0-semantically-released",
  "description": "Template website with Next.js & Chakra UI",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Fran√ßois Best",
    "email": "francois.best@chiffre.io",
    "url": "https://chiffre.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chiffre-io/template-website"
  },
  "keywords": [
    "chiffre",
    "webapp",
    "template"
  ],
  "scripts": {
    "dev": "next",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "build:next": "next build",
    "build:export": "next export",
    "build": "run-s build:next build:export",
    "analyze": "ANALYZE=true next build",
    "ci": "run-s test build"
  },
  "dependencies": {
    "@47ng/chakra-next": "^3.0.0-beta.4",
    "@chakra-ui/react": "^1.3.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@sentry/browser": "^6.1.0",
    "@sentry/integrations": "^6.1.0",
    "@sentry/node": "^6.1.0",
    "@sentry/webpack-plugin": "^1.14.0",
    "framer-motion": "^3.3.0",
    "next": "^10.0.6",
    "next-seo": "^4.19.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@next/bundle-analyzer": "^10.0.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/webpack": "^4.41.26",
    "commitlint": "^11.0.0",
    "husky": "4.x",
    "jest": "^26.6.3",
    "next-compose-plugins": "^2.2.1",
    "next-transpile-modules": "^6.3.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "webpack": "^5"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
